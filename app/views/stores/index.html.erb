<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table class ="table table-hover ">
  <thead>
  <%if !@stores.blank?%>
    <tr>
      <th>Shop Name</th>
      <th>Shop Image</th>
      <th>Website Url</th>
      <th>Company Email</th>
      <th>Shop Intro</th>
      <th>Gst Image</th>
      <th>Shop Pan Image</th>
      <th>Trade Liscense Image</th>
      <th>Iso Image</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Address1/th>
      <th>Landmark</th>
      <th>Shop Phone No</th>
      <th>Alternative Phone no1</th>
      <th colspan="3"></th>
    </tr>
    <%end%>
  </thead>

  <tbody>
      <% unless @stores.blank?
      @stores.each do |store| %>
      <tr>
        <td><%= store.shop_name %></td>
        <td><%= image_tag url_for(store.images.first), size: "64" if store.images.attached? %></td> 
        <td><%= store.website_url %></td>
        <td><%= store.company_email %></td>
        <td><%= store.shop_intro %></td>
        <td><%= store.address1 %></td>
        <td><%= store.landmark %></td>
        <td><%= store.shop_phone_no %></td>
        <td><%= store.alternative_phone_no1 %></td>
       
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end 
    end %>
  </tbody>
</table>
<%if @paginatable_array.nil?%>
<%else%>  
  <%= paginate @paginatable_array %>
  <%= page_entries_info @paginatable_array, entry_name: 'item' %>
<%end%>
 <br>
 <%= link_to 'New Store', new_store_path %>