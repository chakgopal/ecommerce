
<%= simple_form_for(@quote_item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :sku %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :price %>
    <%= f.association :quote %>
    <%= f.association :product %>
    <%= f.association :store, label_method: :shop_name, value_method: :seller_id, prompt: "Select your Shop" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
