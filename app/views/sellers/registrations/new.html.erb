<style>
.center{
      margin-top: 40px;
  }

  .line1{
      margin-left: 35%;
      margin-right: 35%;
      height: 10px;
      border: 0;
    box-shadow: 0 5px 5px -5px #8c8b8b inset;
  }

  .text-new{
    font-size: 12px;
    margin-right: 10px;
  }

  .btn-lg{
      margin-top: 20px;
  }
  
  .hint{
    position: absolute;
    right: 0.001px;
    margin-right: 28.5%;
    color: #889096;
    font-size: 13px;
    font-family: "Open Sans", Helvetica, Arial, sans-serif;
    top: 1.5em;
    margin-top: 22.2%;
    line-height: 18px;
}
</style>

<center class="center">

  <h4>Sign up for a free 14 day trial</h4>

  <hr class="line1">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {style: "width: 100%;max-width: 330px;padding: 15px;"}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" }%>
      <%= f.input :password,
                  required: true,
                  label: false,
                  input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: false,
                  input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" } %>
    </div>

    <h7 class="hint">Minimum 6 characters</h7>

    <h7 class="text-new">I agree to the Terms of Service and Privacy Policy. </h7>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    </div>

  <% end %>

  <h7>Already have an account?</h7>

  <%= render "sellers/shared/links" %>

</center>