<p id="notice"><%= notice %></p>

<h1>Customer Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Postalcode</th>
      <th>Country</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_addresses.each do |customer_address| %>
      <tr>
        <td><%= customer_address.address1 %></td>
        <td><%= customer_address.address2 %></td>
        <td><%= customer_address.city %></td>
        <td><%= customer_address.state %></td>
        <td><%= customer_address.postalcode %></td>
        <td><%= customer_address.country %></td>
        <td><%= customer_address.phone1 %></td>
        <td><%= customer_address.phone2 %></td>
        <td><%= link_to 'Show', customer_address %></td>
        <td><%= link_to 'Edit', edit_customer_address_path(customer_address) %></td>
        <td><%= link_to 'Destroy', customer_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

