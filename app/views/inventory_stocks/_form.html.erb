
<%= simple_form_for @inventory_stock do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
    <div class="form-inputs">
      <%= f.input :quantity %>
      <%= f.input :min_quantity %>
      <%= f.input :status, :input_html => { :value => @stat } %>
      <%= f.input :min_sale_quantity %>
      <%= f.input :max_sale_quantity %>
      <%= f.select :is_in_stock, InventoryStock.is_in_stocks.keys.to_a, prompt: "Select stock aviability" %>
    </div>
    
    <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
