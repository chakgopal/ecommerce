<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Sku:</strong>
  <%= @product.sku %>
</p>

<p>
  <strong>Status:</strong>
  <%= @product.status %>
</p>

<p>
  <strong>Short desc:</strong>
  <%= @product.short_desc %>
</p>

<p>
  <strong>Long desc:</strong>
  <%= @product.long_desc %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>



<p>
  <strong>Store:</strong>
  <%= @product.store.shop_name %>
</p>

<p>
  <% if @product.images.attached? %>
    <% @product.images.each do |product_image| %>
      <%= image_tag url_for(product_image), size: "64" %>
    <% end %>
  <% end %>
</p>
<% if seller_signed_in? || admin_signed_in? %>
  <%= link_to 'Edit', edit_product_path(@product) %>|
<% end %>
<%= link_to 'Back', products_path %>
