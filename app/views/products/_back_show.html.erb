<%= stylesheet_link_tag 'backend1', media: 'print, screen' %>
<div class="pro_sell-2">
<hr>
<div class="row">
<div class="col-sm">

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Sku:</strong>
    <%= @product.sku %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @product.status %>
  </p>

  <p>
    <strong>Short desc:</strong>
    <%= @product.short_desc %>
  </p>

  <p>
    <strong>Long desc:</strong>
    <%= @product.long_desc %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    <strong>Store:</strong>
    <%= @product.store.shop_name if @product.store.shop_name.present? %>
  </p>
  </div>
  <div class="vl"></div>
  <div class="col-sm">
  <p>
    <% if @product.images.attached? %>
      <% @product.images.each do |product_image| %>
        
        <%= image_tag url_for(product_image.variant(resize:"100x460").processed) %>
        
      <% end %>
    <% end %>
  </p>

  <% if seller_signed_in? || admin_signed_in? %>
      <%= link_to 'Edit', edit_product_path(@product) %> 
    <% end %>
  </div>
</div>
</div>
    