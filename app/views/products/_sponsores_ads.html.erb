<%= stylesheet_link_tag 'frontend', media: 'print, screen' %>

<div id="slideshow">

  <div>
  <%= image_tag("1-1.jpg", class: "ads", alt: "") %>
  </div>
  <div>
  <%= image_tag("1-2.jpg", class: "ads", alt: "") %>
  </div>
  <div>
  <%= image_tag("1-3.jpg", class: "ads", alt: "") %>
  </div>

</div>

<script>
  
  $("#slideshow > div:gt(0)").hide();

  setInterval(function() {
    $('#slideshow > div:first')
      .fadeOut(1000)
      .next()
      .fadeIn(1000)
      .end()
      .appendTo('#slideshow');
  }, 5000);

</script>