<%= stylesheet_link_tag 'backend1', media: 'print, screen' %>

<div class="pro_sell-2">
  <div class="header22">
    <h5>Create a new product</h5>
<%= @category_result.to_json %>
<%= simple_form_for @product do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :sku %>
    <%= f.select :status, Product.statuses.keys.to_a, prompt: "Select status" %>
    <%= f.input :short_desc %>
    <%= f.input :long_desc %>
    <%= f.input :price %>
    
    <%= f.association :store, label_method: :shop_name, value_method: :id, prompt: "Select your Shop" %>
    <%= f.input :images, as: :file, input_html: {multiple: true} %>
  </div>
  <%= simple_form_for @product do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="pro-header-select">
      <div class="row">
        <div class="col-sm">
          <h6>+ Import from CSV</h6>
        </div>
      </div>
    </div>
    <div class="form-inputs">
      <div class="row">
        <div class="col-sm">
          <h7>Select product status:</h7><%= f.select :status, Product.statuses.keys.to_a, prompt: "Select status", class: "section" %>
          <%= f.input :name %>
          <%= f.input :sku %>
          <%= f.input :short_desc %>
        </div>
        <div class="col-sm">
          <h7>Select product images:</h7><%= f.input :images, as: :file, label: false, input_html: {multiple: true}, class: "section1" %>
          <%= f.input :long_desc %>
          <%= f.input :price %>
          <%= f.association :store, label_method: :shop_name, value_method: :id, prompt: "Select your Shop" %>
        </div>
      </div>
      <div class="form-actions-2">
        <%= f.button :submit %><%= link_to 'Back', products_path, class: "back1" %>
      </div>
    </div>
  <% end %>
</div>

  