
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :sku %>
    <%#= f.select :status, Product.statuses.keys.to_a, prompt: "Select status" %>
    <%= f.input :short_desc %>
    <%= f.input :long_desc %>
    <%= f.input :price %>
    
    <%= f.association :store, label_method: :shop_name, value_method: :id, prompt: "Select your Shop" %>
    <%= f.input :images, as: :file, input_html: {multiple: true} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
