
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :sku %>
    <%= f.input :status %>
    <%= f.input :short_desc %>
    <%= f.input :long_desc %>
    <%= f.input :price %>
    <%= f.input :color %>
    <%= f.input :store %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
