<p id="notice"><%= notice %></p>

  <%= link_to 'ADD', new_customer_registration_path %> 

<h1>Customer Information</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer.each do |customer| %>
      <tr>
       
        <td><%= customer.email %></td>
        <td><%= link_to 'Edit',  edit_customer_registration_path(customer) %></td>
        <td><%= link_to 'Destroy',  destroy_customer_session_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

