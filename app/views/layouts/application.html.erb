<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
   <nav class="navbar navbar-expand navbar-dark">
      <a class="logo" %><%= image_tag("logo2-1.png", size: "62x50") %></a>
      <% if current_seller %>
        <%= link_to "logout", destroy_seller_session_path, method: :delete, class: "fnt-lgin-ed-rg-lgot-2" %>
        <%= link_to "Edit", edit_seller_registration_path(@user), class: "fnt-lgin-ed-rg-lgot" %>
     <% else %>
        <%= link_to "Register",new_seller_registration_path, class: "fnt-lgin-ed-rg-lgot-2" %>
        <%= link_to "Login", new_seller_session_path, class: "fnt-lgin-ed-rg-lgot" %>
        <% end %>      
   </nav>
   <div class="notice">
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
   </div>
    <%= yield %>
  </body>
</html>
