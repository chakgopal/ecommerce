<%= stylesheet_link_tag 'quotes', media: 'print, screen' %>

<div class = "_2ycxrs"> 
  <h5>Cart Details</h5> 
  <hr>
  <h7>Price for <%= @quote_items_count %> item :</h7>
  <%= @subtotal %>
</div>


<% if @cart_items.size == 0 %>
  <p class="text-center">
    There are no items in your shopping cart.  Please <%= link_to "go back", root_path %> and add some items to your cart.
  </p>
<% else %>
  <div class = "_3ycxrs"> 
    <h5>My Cart(<%=@quote_items_count %>)</h5> 
    <hr>
    <div class = "PaJLWc"> 
      <% @product_details.each do|p| %>
        <%= image_tag url_for(p.images.first), size: "120" if p.images.attached? %>
        <div class="col-md-4" >Qty
      <select class="qty" id ="qty_<%=p.id%>">
        <option value="1"><strong>1</strong></option>
      </select>
    </div> 
        <%= link_to 'Remove Item', remove_item_from_cart_quote_path(:id => p.id),method: :delete,class: "btn btn-inverse" %>
      <%end%>
    </div>
  </div>  
  <div class="description">   
    <% @cart_items.each do|c| %>
      <%=c["name"] %><br/>
      <%=c["shop_name"] %><br/>
      <%=c["price"] %>
    <%end%>  
  </div>
<%end%>

<script>
var selItem = [];
var data_hash = {};
$(document).ready(function(){
  
  if(<%=@quote_items_count%>!=0){
     $(".cart").append('<div class="_2dcihZ"><%=@quote_items_count %></div>');
  }
  var options =  '<option value="1"><strong>1</strong></option>';
  for(i=2;i<=10;i++){
     options += '<option value="'+i+'">'+i+'</option>';
  }
  $('.qty').html(options);
  setSelectedValue();
  });
  
  
    $('select').change(function() {
    
    var id = $(this).attr('id').split("_")[1];
    var qty = $("#qty_"+id).val();
    data_hash["id"] = id;
    data_hash["qty"] = qty;
   
    selItem.push(data_hash);
    console.log(selItem);
    sessionStorage.setItem("SelItem", JSON.stringify(data_hash));
   

    $.ajax({

      url: "show_cart?id="+id+"&qty="+qty,
      method: "GET",
      contentType: "application/json",
      success: function() {
        location.reload();
      }
     });

  });
  
