<style>

  .logincover{
    background-color: rgba(0, 0, 0, 0.6);
    width: 410px;
    height: 485px;
    margin-left: 35%;
    margin-top: 20px;
    position: absolute;
    margin-bottom: 100px;
  }

  .header{
    text-align: center;
    padding-top: 40px;
    color: white;
  }

  .fog{
    font-size: 15px;
    float: right;
    color: white;
  }

  .fog:hover{
    text-decoration: none;
  }

  .btn-sm{
    margin-top: 30px;
    margin-left: 28.5%;
    color: white;
    font-size: 20px;
  }

  .btn-sm:hover{
   text-decoration: none;
   color: #50A6DD;
  }

  label{
    padding-top: 20px;
    color: white;
  }

  .btn{
    margin-top: 10px;
    backgroung-color: none;
  }

</style>

<div class="cover">
  <div class="logincover">
    <h2 class="header">Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {style: "width: 100%;max-width: 330px;padding: 15px;margin-left: 10%;"}) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "fog" %><br />
        <% end %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Create an account", new_registration_path(resource_name), class: "btn-sm" %><br />
    <% end %>
  </div>
</div>
  
 
 

      

